// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  slug             String   @unique // Added @unique constraint
  title            String
  shortDescription String
  description      String
  imageUrl         String
  technologies     String[]
  liveLink         String?
  repoLink         String?
  startDate        String
  endDate          String?
  detailsImages    String[] @default([]) // Added default empty array
  features         String[] @default([]) // Added default empty array
  dataAiHint       String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("projects") // Optional: specify collection name
}

model Experience {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        String
  title       String
  company     String?
  description String
  tags        String[] @default([]) // Added default empty array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("experiences") // Optional: specify collection name
}

model Skill {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique // Added @unique constraint for skill names
  proficiency  Int      @db.Int // Ensure it's treated as integer
  technologies String[] @default([]) // Added default empty array
  category     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("skills") // Optional: specify collection name
}