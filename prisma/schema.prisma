// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  slug              String // Temporarily removed @unique
  title             String
  shortDescription  String
  description       String
  imageUrl          String
  technologies      String[]
  liveLink          String?
  repoLink          String?
  startDate         String
  endDate           String?
  detailsImages     String[]
  features          String[]
  dataAiHint        String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Experience { // Corresponds to JourneyItem
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  date        String
  title       String
  company     String?
  description String
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum SkillCategory {
  Frontend
  Backend
  DevOps
  Mobile
  Tools
  Other
}

model Skill {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  name         String // Removed @unique in previous step, keeping it removed for now
  proficiency  Int // 0-100
  technologies String[]
  category     SkillCategory
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}