
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  slug              String    @unique
  title             String
  shortDescription  String
  description       String
  imageUrl          String
  technologies      String[]
  liveLink          String?
  repoLink          String?
  startDate         String
  endDate           String?
  detailsImages     String[] // Corrected: Was String[]?
  features          String[] // Corrected: Was String[]?
  dataAiHint        String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Experience { // Corresponds to JourneyItem
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        String
  title       String
  company     String?
  description String
  tags        String[] // Corrected: Was String[]?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Skill {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String  // Removed @unique temporarily for db push, can be re-added
  proficiency  Int // 0-100
  technologies String[] // Corrected: Was String[]?
  category     String // Should match 'Frontend' | 'Backend' | 'DevOps' | 'Mobile' | 'Tools' | 'Other'
  // icon field from Skill interface is complex for Prisma schema; manage in frontend or as string
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
